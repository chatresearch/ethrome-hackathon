{
  "schema": "https://a2a-protocol.org/schema/v1",
  "agent": {
    "name": "DeFi Wizard",
    "ensName": "defi-wizard.aiconfig.eth",
    "description": "Expert DeFi strategy advisor specializing in yield optimization, protocol analysis, and risk management for decentralized finance",
    "type": "eliza-os",
    "version": "1.0.0",
    "author": "ballew.eth",
    "license": "MIT"
  },
  "capabilities": [
    {
      "id": "yield-analysis",
      "name": "Yield Farming Analysis",
      "description": "Analyze yield farming opportunities and APY sustainability across DeFi protocols",
      "category": "defi",
      "inputSchema": {
        "type": "object",
        "properties": {
          "protocolName": {
            "type": "string",
            "description": "Name of the DeFi protocol (e.g., Aave, Compound, Uniswap)"
          },
          "apy": {
            "type": "number",
            "description": "Annual Percentage Yield percentage"
          },
          "tvl": {
            "type": "string",
            "description": "Total Value Locked in the protocol"
          },
          "riskTolerance": {
            "type": "string",
            "enum": ["conservative", "moderate", "aggressive"],
            "description": "User's risk tolerance level"
          }
        },
        "required": ["protocolName", "apy"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "recommendation": {
            "type": "string"
          },
          "sustainabilityScore": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "risks": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    {
      "id": "protocol-risk",
      "name": "Protocol Risk Assessment",
      "description": "Assess risks associated with DeFi protocols including smart contract, market, and operational risks",
      "category": "defi",
      "inputSchema": {
        "type": "object",
        "properties": {
          "protocolName": {
            "type": "string",
            "description": "Name of the protocol"
          },
          "tvl": {
            "type": "string",
            "description": "Total Value Locked"
          },
          "auditStatus": {
            "type": "string",
            "enum": ["audited", "partially-audited", "not-audited"],
            "description": "Audit status of the protocol"
          }
        },
        "required": ["protocolName"]
      }
    },
    {
      "id": "portfolio-optimization",
      "name": "Portfolio Diversification",
      "description": "Provide recommendations for diversifying DeFi investments across multiple protocols",
      "category": "defi",
      "inputSchema": {
        "type": "object",
        "properties": {
          "currentPositions": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Current DeFi protocol positions"
          },
          "allocatedCapital": {
            "type": "number",
            "description": "Total capital to allocate"
          }
        }
      }
    }
  ],
  "pricing": {
    "model": "per-query",
    "amount": "0.0015",
    "currency": "ETH",
    "network": "base-sepolia"
  },
  "endpoints": {
    "query": "https://api.youragents.com/defi-wizard/query",
    "health": "https://api.youragents.com/defi-wizard/health"
  },
  "metadata": {
    "createdAt": "2025-01-17T00:00:00Z",
    "updatedAt": "2025-01-17T00:00:00Z",
    "tags": ["defi", "yield", "apy", "protocols", "risk-management", "portfolio"],
    "language": "en",
    "rateLimit": {
      "requests": 50,
      "period": "hour"
    },
    "disclaimer": "This agent provides DeFi analysis for informational purposes. Always conduct your own research before investing."
  }
}
